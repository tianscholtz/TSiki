<p id="notice"><%= notice %></p>

<h3>
  <%= @entry.title %>
</h3>
<p>
  <b>Original Author:</b>
  <%= @entry.user.name %>
  <br />
  <b>Date:</b>
  <%= @entry.user.created_at.to_date %> 

  <% if @entry.user.created_at.to_date != @entry.user.updated_at.to_date %>
  	 | <b>Updated:</b>
  	<%= @entry.user.updated_at.to_date %>
   <% end %>
</p>


<p>
  <%= render_markdown(@entry.body) %>
</p>



<%= link_to 'Edit', edit_entry_path(@entry) %> |

<% if user_signed_in? %>
	<% if @entry.user == current_user or current_user.has_role? :admin %>
		<%= link_to 'Delete', @entry, method: :delete, data: { confirm: 'Are you sure you want to delete this entry?' } %> |
	<% end %>
<% end %>

<%= link_to 'Home', root_path %> |
<%= link_to 'My Entries', entries_path %>
