<table>

<% @entries.each do |entry| %>
  
  <% if entry.user == current_user %>

        <tr>
      

      <td><h4><%= link_to truncate(entry.title, :length => 50, :separator => ' '), entry %></h4>
      <%= truncate(entry.body, :length => 100, :separator => ' ') %><br />
      <%= link_to 'Edit', edit_entry_path(entry) %> 
      | <%= link_to 'Delete', entry, method: :delete, data: { confirm: 'Are you sure you want to delete this entry?' } %>
      <hr /></td>
      <td> <b> | Date: </b> <%= entry.created_at.to_date %> </td>
      
      
   
      
      
    </tr>

  <% end %>
<% end %>
</table>